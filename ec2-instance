provider "aws" {
  region     = "us-east-1"
  access_key = ""
  secret_key = ""
}

resource "aws_instance" "dev-server" {
  ami           = "ami-07860a2d7eb515d9a"
  instance_type = "t3.micro"

  tags = {
    Name = "HelloWorld"
  }
}
/*
run
terraform validate
terraform plan
terraform apply
and after checking the instance on aws dashboard
terraform destroy
*/
